<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/id_tv_Tag01"
                android:text="测试1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_tv_Tag02"
                android:text="测试2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_tv_Tag03"
                android:text="测试3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_tv_Tag04"
                android:text="测试4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_tv_Tag05"
                android:text="测试5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/id_btn_Replace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="替换数据"/>

            <Button
                android:id="@+id/id_btn_Read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="读取数据"/>

            <Button
                android:id="@+id/id_btn_Remove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="移除数据"/>

            <Button
                android:id="@+id/id_btn_Contains"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="判断是否包含某个key"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
